package org.firstinspires.ftc.teamcode.auto;

import static org.firstinspires.ftc.teamcode.hardware.Movement.backward;
import static org.firstinspires.ftc.teamcode.hardware.Movement.reset_encoders;

import com.acmerobotics.dashboard.config.Config;
import com.qualcomm.robotcore.eventloop.opmode.Autonomous;
import com.qualcomm.robotcore.eventloop.opmode.LinearOpMode;
import com.qualcomm.robotcore.hardware.DcMotor;
import org.firstinspires.ftc.teamcode.hardware.Movement;

@Config
@Autonomous(name = "Auto_Blue_Net")
public class Auto_Blue_Net extends LinearOpMode {
    public static double a01_bd = -20;
    public static double a02_rr = 90;
    public static double a03_fd = 4;
    //public static double a04_lsu = 0; LINEAR SLIDES UP
